#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#: import sp kivy.metrics.sp
<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (26/255, 26/255, 26/255, 1)
        
<WindowManager>
    transition: FallOutTransition()
    font_name: "segoeuil.ttf"
	FirstWindow:
	SecondWindow:



<FirstWindow>
    name: "basic"
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        Label:
            
            id: input_box
            text: "0"
            font_size: 40
            multiline: False
            text_size: (self.width-30, self.height)
            halign: "right"
            valign: 'middle'
            size_hint: (1, 0.25)
            background_color: (1, 1, 1, 1)
            background_normal: ''
            readonly: True
            color:(0,0,0,1)
            canvas.before:
                Color:
                    rgba: (255,255,255, 1)
                Rectangle:
                    pos: input_box.pos
                    size: input_box.size

        GridLayout:
            cols: 4
            rows: 5

            spacing: 10, 10
            padding: 10, 10

            ### randul 1 ####
            RoundedButton:
                text: "PRO"
                font_size: 35
                on_release: 
                    # root.sings("%")
                    app.root.opacity = 0
                    app.root.current = "pro"
                    app.root.opacity = 1
                    root.manager.transition = WipeTransition()
                    app.WindowManager.FirstWindow.opacity = 1
                    app.WindowManager.SecondWindow.opacity = 0

            RoundedButton:
                text: u"\u2620"
                font_size: 35
                on_press: root.clear()

            RoundedButton:
                # text: u"<x"
                #text: u"\u01f4a9"
                text: "\u22ca"
                font_size: 35
                on_press: root.remove_last()

            RoundColorButton:
                text: "/"
                font_size: 35
                on_press: root.sings("/")

            #### randul 2 #####
            RoundedButton:
                text: "7"
                font_size: 35
                on_press: root.button_value(7)
                #on_press: self.

            RoundedButton:
                text: "8"
                font_size: 35
                on_press: root.button_value(8)

            RoundedButton:
                text: "9"
                font_size: 35
                on_press: root.button_value(9)

            RoundColorButton:
                text: "*"
                font_size: 35
                on_press: root.sings("*")

            #### randul 3 ###
            RoundedButton:
                text: "4"
                font_size: 35
                on_press: root.button_value(4)

            RoundedButton:
                text: "5"
                font_size: 35
                on_press: root.button_value(5)

            RoundedButton:
                text: "6"
                font_size: 35
                on_press: root.button_value(6)

            RoundColorButton:
                text: "-"
                font_size: 35
                on_press: root.sings("-")

            ### randul 4 ###
            RoundedButton:
                text: "1"
                font_size: 35
                on_press: root.button_value(1)

            RoundedButton:
                text: "2"
                font_size: 35
                on_press: root.button_value(2)

            RoundedButton:
                text: "3"
                font_size: 35
                on_press: root.button_value(3)

            RoundColorButton:
                text: "+"
                font_size: 35
                on_press: root.sings("+")

            ### randul 5 ###
            RoundedButton:
                text: "+/-"
                font_size: 35
                on_press: root.positive_negative()

            RoundedButton:
                text: "0"
                font_size: 35
                on_press: root.button_value(0)

            RoundedButton:
                text: "."
                font_size: 35
                on_press: root.dot()

            EqualButton:
                text: "="
                font_size: 35
                on_press: root.results()

